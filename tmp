docker run --network skynet --name so1 --hostname so1 -p 8000:8000 \
              -e "SPLUNK_PASSWORD=passwd!@#" \
              -e "SPLUNK_START_ARGS=--accept-license" \
              -it splunk/splunk:latest


docker run --network skynet --name uf1 --hostname uf1 \
              -e "SPLUNK_PASSWORD=passwd!@#" \
              -e "SPLUNK_START_ARGS=--accept-license" \
              -e "SPLUNK_STANDALONE_URL=splunk" \
              -it splunk/universalforwarder:latest


docker run -d -p 8000:8000 -e "SPLUNK_START_ARGS=--accept-license" -e "SPLUNK_PASSWORD=passwd!@#" --network skynet --name splunk splunk/splunk:latest